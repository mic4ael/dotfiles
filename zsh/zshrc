source ~/.dotfiles/submodules/antigen/antigen.zsh

# Load the oh-my-zsh's library.
antigen use oh-my-zsh

# Bundles from the default repo (robbyrussell's oh-my-zsh).
antigen bundle git
antigen bundle heroku
antigen bundle pip
antigen bundle lein
antigen bundle command-not-found

# Syntax highlighting bundle.
antigen bundle zsh-users/zsh-syntax-highlighting
antigen bundle zsh-users/zsh-autosuggestions
antigen bundle peterhurford/git-aliases.zsh

# Load the theme.
antigen theme gnzh

# Tell antigen that you're done.
antigen apply

for f in $(find ~/.dotfiles/zsh -depth 1 -name "*.zsh");
do
  source $f;
done;

test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

man() {
  env \
    LESS_TERMCAP_mb=$(printf "\e[1;31m") \
    LESS_TERMCAP_md=$(printf "\e[1;31m") \
    LESS_TERMCAP_me=$(printf "\e[0m") \
    LESS_TERMCAP_se=$(printf "\e[0m") \
    LESS_TERMCAP_so=$(printf "\e[1;44;33m") \
    LESS_TERMCAP_ue=$(printf "\e[0m") \
    LESS_TERMCAP_us=$(printf "\e[1;32m") \
  man "$@"
}

if [ ! -d "$HOME/bin" ]
then
  mkdir -p "$HOME/bin"
  cp .dotfiles/scripts/* "$HOME/bin"
fi

if [ ! -d "$HOME/go" ]
then
  mkdir -p "$HOME/go"
fi

export GOPATH=$HOME/go
export PATH="${HOME}/.local/bin:${HOME}/bin:/usr/local/sbin:/usr/local/bin:/usr/local/opt/gettext/bin:$PATH"

if ! type pipsi > /dev/null
then
  curl https://raw.githubusercontent.com/mitsuhiko/pipsi/master/get-pipsi.py | python
  pipsi install pipenv ipython flake8
fi

export ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=11'
export HISTCONTROL=ignoreboth:erasedups;
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

alias ipython='ipython --profile=mic4ael'
